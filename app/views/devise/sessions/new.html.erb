<div class="container mt-2 d-flex justify-content-center align-items-center">
  <div class="card shadow rounded p-4 w-100" style="max-width: 400px;">
    <div class="card-body">
      <h2 class="text-center mb-4"><%= t('.sign_in', default: "Sign in") %></h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, class: "form-control", required: true %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end -%>

        <div class="d-grid">
          <%= f.submit t('.sign_in', default: "Sign in"), class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
