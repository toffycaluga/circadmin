<% content_for :title, t("user_profiles.show.title") %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card shadow">
    <div class="card-header">
      <h5 class="mb-0"><%= t("user_profiles.show.header", name: @user_profile.full_name) %></h5>
    </div>

    <div class="card-body">
      <p><strong><%= t("activerecord.attributes.user_profile.full_name") %>:</strong> <%= @user_profile.full_name %></p>
      <p><strong><%= t("activerecord.attributes.user_profile.address") %>:</strong> <%= @user_profile.address %></p>
      <p><strong><%= t("activerecord.attributes.user_profile.country") %>:</strong> <%= @user_profile.country %></p>

      <% if @user_profile.profile_picture.attached? %>
        <p><strong><%= t("activerecord.attributes.user_profile.profile_picture") %>:</strong></p>
        <%= image_tag @user_profile.profile_picture.variant(resize_to_limit: [300, 300]), class: "img-fluid rounded" %>
      <% end %>
    </div>

    <div class="card-footer d-flex justify-content-between">
      <div>
        <%= link_to t("user_profiles.actions.edit"), edit_user_profile_path(@user_profile), class: "btn btn-outline-primary me-2" %>
        <%= link_to t("user_profiles.actions.back"), root_path, class: "btn btn-outline-secondary" %>
      </div>
      <%# button_to t("user_profiles.actions.destroy"), @user_profile, method: :delete, data: { confirm: t("user_profiles.actions.confirm_destroy") }, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
