<% content_for :title, t("user_profiles.new.title") %>
<div class="col-xl-6 col-md-12">
  <div class="card table-card">
      <div class="card-header">
        <div class="container mt-5">
          <div class="row justify-content-center">
                <div class="card-header text-white">
                  <h3 class="mb-0 text-primary "><%= t("user_profiles.new.heading") %></h3>
                </div>

                <div class="card-body">
                  <%= render "form", user_profile: @user_profile %>
                </div>

                <div class="card-footer text-end">
                  <%= link_to t("user_profiles.actions.back"), user_profiles_path, class: "btn btn-outline-secondary" %>
                </div>
              </div>
        </div>
    </div>
  </div>
</div>