<% content_for :title, t("user_profiles.index.title") %>

<div class="container mt-4">
  <% if notice %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <h1 class="mb-4"><%= t("user_profiles.index.heading") %></h1>

  <div class="list-group mb-4">
    <% @user_profiles.each do |user_profile| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%= user_profile.full_name.presence || t("user_profiles.index.unnamed") %>
        </div>
        <div>
          <%= link_to t("user_profiles.index.show"), user_profile, class: "btn btn-sm btn-outline-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to t("user_profiles.actions.new"), new_user_profile_path, class: "btn btn-primary" %>
</div>
