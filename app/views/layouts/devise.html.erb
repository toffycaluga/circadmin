<!DOCTYPE html>
<html>
  <head>
    <title>CircAdmin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel: "stylesheet", crossorigin: "anonymous" %>
    <%= stylesheet_link_tag "application", media: "all" %>

    <style>
      * {
        margin: 0;
        padding: 0;
      }

      html, body {
        height: 100%;
      }

      body {
        display: flex;
        flex-direction: column;
      }

      main {
        flex-grow: 1;
        background-image: url('<%= asset_path("patron.png") %>');
        background-size: 150px;
        background-position: top left;
        background-repeat: repeat;
        position: relative;
      }

      .overlay {
        position: absolute;
        inset: 0;
        background-color: rgba(255, 255, 255, 0.7);
        z-index: 0;
      }
    </style>
  </head>

  <body class="bg-light">
    <main>
      <div class="overlay"></div>
      <div class="position-relative z-1 w-100">

        <div class="justify-content-start p-3">
          <%= link_to "Volver al inicio", root_path, class: "btn btn-secondary" %>
        </div>

        <%= render 'shared/language_selector' %>
        <%= render 'shared/alert' %>
        <%= yield %>

      </div>
    </main>

    <%= render 'shared/footer' %>

    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", crossorigin: "anonymous" %>
  </body>
</html>
