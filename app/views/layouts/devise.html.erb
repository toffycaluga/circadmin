<!DOCTYPE html>
<html>
  <head>
    <title>CircAdmin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", rel: "stylesheet", crossorigin: "anonymous" %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <style>
        main::before{
           
        }
    </style>
  </head>

  <body class="bg-light">
    <main class="vh-100 " style="background-image: url('<%= asset_path("patron.png") %>'); background-size: 100px; background-position: top-left;background-repeat:repeat; bacground-opacity:70%;">
      <div class="overlay"></div>
      <div class="position-relative z-1 w-100" >

      <%= render 'shared/language_selector' %>
      <%= render 'shared/alert'%>
      <%= yield %>
      </div>
    </main>

    <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js", crossorigin: "anonymous" %>
  </body>
</html>
